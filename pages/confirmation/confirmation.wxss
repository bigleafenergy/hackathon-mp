  margin-left: 20rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.mealpic {
  width: 88px;
  height: 88px;
  display: flex;
}

.mealpic image {
  position: relative;
  width: 88px;
  height: 88px;
